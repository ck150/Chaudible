<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background = "@drawable/back4"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.desire.chaudible.RecordActivity" >

    <ImageButton
        android:id="@+id/record_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="225dp"
        android:src="@drawable/micblack1"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:background = "@drawable/b4" />

    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_button"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginRight="60dp"
        android:layout_marginTop="150dp"
        android:layout_toLeftOf="@+id/record_button"
        android:background="@drawable/b4"
        android:src="@drawable/play11" />

    <ImageButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/record_button"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/b4"
        android:src="@drawable/save_button_selector" />

    <ImageButton
        android:id="@+id/share_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_below="@+id/record_button"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/b4"
        android:layout_toRightOf="@+id/record_button"
        android:src="@drawable/share_button_selector"
        android:onClick="ShareButton" />

    <TextView
        android:id="@+id/tap_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="tap to record"
        android:textSize="60sp"
        android:textColor="#ffffff" />

</RelativeLayout>
